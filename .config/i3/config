# Second Display
set $displayMode "Set display mode: [m]irror [h]ome [l]aptop [o]ne-display"
bindsym $mod+p mode $displayMode
mode $displayMode {
    bindsym m exec"\
		 ~/.config/i3/scripts/monitorscripts/monitormirror.sh"; \
                mode "default"  
    bindsym h exec"\
		 ~/.config/i3/scripts/monitorscripts/monitorhome.sh"; \
                mode "default"
    bindsym l exec"\
		 ~/.config/i3/scripts/monitorscripts/monitorlaptop.sh"; \
                mode "default"
    bindsym o exec"\
		 ~/.config/i3/scripts/monitorscripts/monitoronly.sh"; \
                mode "default"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym --release $mod+tab+l exec --no-startup-id xdotool key Page_Up
bindsym --release $mod+tab+k exec --no-startup-id xdotool key Page_Down

## MOUSE ##
# Do left click 
bindsym $mod+c exec xdotool click 1
# Even move the damn thing!!
bindsym $mod+alt+h xdotool mousemove_relative --sync -100 0
bindsym $mod+alt+j xdotool mousemove_relative --sync 0 100
bindsym $mod+alt+k xdotool mousemove_relative --sync 0 -100
bindsym $mod+alt+l xdotool mousemove_relative --sync 100 0
# move the mouse *enter mouse mode*
mode "mouse" {
    # Macro moves
    bindsym h exec "xdotool mousemove_relative --sync -- -100 0"
    bindsym j exec "xdotool mousemove_relative --sync -- 0 100"
    bindsym k exec "xdotool mousemove_relative --sync -- 0 -100"
    bindsym l exec "xdotool mousemove_relative --sync -- 100 0"
    # Micro moves
    bindsym Shift+h exec "xdotool mousemove_relative --sync -- -7 0"
    bindsym Shift+h exec "xdotool mousemove_relative --sync -- -7 0"
    bindsym Shift+j exec "xdotool mousemove_relative --sync -- 0 7"
    bindsym Shift+k exec "xdotool mousemove_relative --sync -- 0 -7"
    bindsym Shift+l exec "xdotool mousemove_relative --sync -- 7 0"
    # Clicks and right clicks
    bindsym c exec "xdotool click 1"
    bindsym r exec "xdotool click 3"
        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+m mode "mouse"
