# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        bindsym Shift+h resize shrink width 5 px or 10 ppt
        bindsym Shift+j resize grow height 5 px or 10 ppt
        bindsym Shift+k resize shrink height 5 px or 10 ppt
        bindsym Shift+l resize grow width 5 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# Color Settings
set $bar-color 	         #021c1e
set $bg-color 	         #004445
set $inactive-bg-color   #021c1e
set $text-color          #6fb98f
set $inactive-text-color #004445
set $urgent-bg-color     #E53935
set $sed-blue-mink 	 #5CBAFC

# window border
# new_window 1pixel

# window colors
#                       border              background         text                 indicator
client.focused          $bg-color           $bg-color          $text-color          $sed-blue-mink
client.unfocused        $inactive-bg-color $inactive-bg-color $inactive-text-color  $sed-blue-mink
client.focused_inactive $inactive-bg-color $inactive-bg-color $inactive-text-color  $sed-blue-mink 
client.urgent           $urgent-bg-color    $urgent-bg-color   $text-color          $sed-blue-mink


# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    # position top
    status_command i3status
    font pango:Fira Code Medium 10

	colors {
        background $bar-color
        separator #757575
        #                  border             background         text
        focused_workspace  $bg-color          $bar-color         $text-color
        inactive_workspace $inactive-bg-color $inactive-bg-color $inactive-text-color
        urgent_workspace   $urgent-bg-color   $urgent-bg-color   $text-color
    }
}

# Pulse Audio controls
bindsym $mod+F4 exec --no-startup-id pactl -- set-sink-volume 0 +5% #increase sound volume
bindsym $mod+F3 exec --no-startup-id pactl -- set-sink-volume 0 -5% #decrease sound volume
bindsym $mod+F2 exec --no-startup-id pactl set-sink-mute 0 toggle # mute sound

# Sreen brightness controls
bindsym $mod+F6 exec xbacklight -inc 20 # increase screen brightness
bindsym $mod+F5 exec xbacklight -dec 20 # decrease screen brightnessZ

